                ]
              },
              "Procedure": {
                "type": "object",
                "properties": {
                  "Step": {
                    "type": "array",
                    "items": {
                      "properties": {
                        "_reagent": {
                          "type": "string"
                        },
                        "_amount": {
                          "type": "string"
                        },
                        "_temp": {
                          "type": "string"
                        },
                        "_time": {
                          "type": "string"
                        },
                        "_stir": {
                          "type": "string"
                        },
                        "$xml_type": {
