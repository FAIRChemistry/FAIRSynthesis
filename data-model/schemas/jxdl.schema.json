        "_version"
      ]
    },
    "XDL": {
      "type": "object",
      "properties": {
        "Synthesis": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "Metadata": {
                "type": "object",
                "properties": {
                  "_description": {
                    "type": "string"
                  },
                  "_product_inchi": {
                    "type": "string"
                  },
                  "_product": {
                    "type": "string"
                  },
                  "_product_mass": {
                    "type": "string"
                  }
