{
  "title": "JXDL Schema",
  "type": "object",
  "properties": {
    "XDL": {
      "type": "object",
      "properties": {
        "Synthesis": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "Metadata": {
                "type": "object",
                "properties": {
                  "_description": {
                    "type": "string"
                  },
                  "_product_inchi": {
                    "type": "string"
                  },
                  "_product": {
                    "type": "string"
                  }
                },
                "required": [
                  "_description"
                ]
              },
              "Reagents": {
                "type": "object",
                "properties": {
                  "Reagent": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "_name": {
                          "type": "string"
                        },
                        "_id": {
                          "type": "string"
                        },
                        "_inchi": {
                          "type": "string"
                        },
                        "_cas": {
                          "type": "string"
                        },
                        "_role": {
                          "type": "string",
                          "enum": [
                            "substrate",
                            "solvent",
                            "reagent",
                            "acid",
                            "activating-agent",
                            "base",
                            "catalyst",
                            "ligand",
                            "quenching-agent"
                          ]
                        },
                        "_purity": {
                          "type": "string"
                        }
                      }
                    }
                  }
                },
                "required": [
                  "Reagent"
                ]
              },
              "Procedure": {
                "type": "object",
                "oneOf": [
                  {
                    "title": "Flat procedure",
                    "properties": {
                      "Step": {
                        "type": "array",
                        "items": {
                          "$ref": "#/$defs/StepEntry"
                        }
                      }
                    }
                  },
                  {
                    "title": "Procedure with different sections",
                    "properties": {
                      "Prep": {
                        "type": "array",
                        "items": {
                          "$ref": "#/$defs/StepEntry"
                        }
                      },
                      "Reaction": {
                        "type": "array",
                        "items": {
                          "$ref": "#/$defs/StepEntry"
                        }
                      },
                      "Workup": {
                        "type": "array",
                        "items": {
                          "$ref": "#/$defs/StepEntry"
                        }
                      }
                    }
                  }
                ]
              },
              "Product_characterization": {
                "title": "Product Characterization",
                "type": "array",
                "items": {
                  "$ref": "#/$defs/Characterization"
                }
              }
            },
            "required": [
              "Metadata",
              "Reagents",
              "Procedure",
              "Product_characterization"
            ]
          }
        }
      },
      "required": [
        "Synthesis"
      ]
    }
  },
  "required": [
    "?xdl",
    "XDL"
  ],
  "definitions": {},
  "$defs": {
    "Characterization": {
      "title": "Characterization",
      "type": "object",
      "oneOf": [
        {
          "title": "PXRD",
          "type": "object",
          "properties": {
            "_x-ray_source": {
              "type": "string",
              "enum": [
                "Co Kα1",
                "Cu Kα1"
              ]
            },
            "_sample_holder": {
              "type": "object",
              "properties": {
                "_type": {
                  "type": "string"
                },
                "_diameter": {
                  "type": "string"
                }
              }
            },
            "_relative_file_path": {
              "type": "string",
              "format": "uri"
            }
          },
          "required": [
            "_relative_file_path"
          ]
        },
        {
          "title": "weighing",
          "type": "object",
          "properties": {
            "_weight": {
              "type": "string"
            }
          },
          "required": [
            "_weight"
          ]
        }
      ]
    },
    "StepEntry": {
      "title": "Step Entry",
      "properties": {
        "_reagent": {
          "type": "string"
        },
        "_amount": {
          "type": "string"
        },
        "_temp": {
          "type": "string"
        },
        "_time": {
          "type": "string"
        },
        "_stir": {
          "type": "string"
        },
        "_vessel": {
          "type": "string"
        },
        "_gas": {
          "type": "string"
        },
        "_solvent": {
          "type": "string"
        },
        "$xml_type": {
          "type": "string",
          "enum": [
            "Add",
            "HeatChill",
            "EvacuateAndRefill",
            "WashSolid",
            "Wait",
            "Evaporate"
          ]
        }
      }
    }
  }
}