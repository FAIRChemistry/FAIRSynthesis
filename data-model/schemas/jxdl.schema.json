                "required": [
                  "_description"
                ]
              },
              "Hardware": {
                "type": "object",
                "properties": {
                  "#text": {
                    "type": "string"
                  }
                },
                "required": [
                  "#text"
                ]
              },
              "Reagents": {
                "type": "object",
                "properties": {
                  "Reagent": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "_name": {
                          "type": "string"
                        },
                        "_id": {
                          "type": "string"
                        },
                        "_inchi": {
                          "type": "string"
                        },
                        "_role": {
                          "type": "string",
